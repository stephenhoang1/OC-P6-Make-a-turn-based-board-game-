
// array randomiser
function make_random_array(arr) {
  var i = arr.length, j, temp;

while (--i > 0) {
  j = Math.floor(Math.random() * (i + 1));
  temp = arr[j];
  arr[j] = arr[i];
  arr[i] = temp;
  }
}

